<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A131A"
    tools:context=".Home">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Basic Settings"
        android:textColor="#3D484A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView12"
        android:text="+000 000 0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:text="Phone number"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/text_phoneNo"
        android:layout_marginTop="60dp"
        android:text="Backup Phone number"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_backupNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView14"
        android:text="+000 000 0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="60dp"
        android:text="Permissions"
        android:textColor="#3D484A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView16"
        android:text="Grant Permissions"
        android:textSize="22sp" />

    <Button
        android:id="@+id/b_getAll"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView"
        android:background="@color/colorPrimary"
        android:text="Grant All"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/b_getAll"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Phone State"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_startstop"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Start/Stop Service"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/b_1"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Boot State"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/b_2"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Send SMS"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/b_3"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Receive SMS"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_6"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/b_4"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Get Location"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_stat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_1"
        android:layout_marginRight="10dp"
        android:text="Denied" />

    <TextView
        android:id="@+id/text_stat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_2"
        android:layout_marginRight="10dp"
        android:text="Denied" />

    <TextView
        android:id="@+id/text_stat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_3"
        android:layout_marginRight="10dp"
        android:text="Denied" />

    <TextView
        android:id="@+id/text_stat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_4"
        android:layout_marginRight="10dp"
        android:text="Denied" />

    <TextView
        android:id="@+id/text_stat6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_6"
        android:layout_marginRight="10dp"
        android:text="Denied" />


  </RelativeLayout>

</ScrollView>